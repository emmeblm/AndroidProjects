<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@mipmap/twwallpaper2">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:text="@string/cambio_segundo_activity"
        android:id="@+id/btnCambioSegundoActivity"
        android:layout_marginTop="82dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="onClickSegundoActivity" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cambio_tercer_activity"
        android:id="@+id/btnCambioTercerActivity"
        android:layout_below="@+id/btnCambioSegundoActivity"
        android:layout_toRightOf="@+id/textView"
        android:layout_marginTop="27dp"
        android:layout_alignRight="@+id/btnCambioSegundoActivity"
        android:layout_alignEnd="@+id/btnCambioSegundoActivity"
        android:clickable="true"
        android:onClick="onClickTercerActivity" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cambio_cuarto_activity"
        android:id="@+id/btnCambioCuartoActivity"
        android:layout_below="@+id/btnCambioTercerActivity"
        android:layout_marginTop="27dp"
        android:layout_alignRight="@+id/btnCambioTercerActivity"
        android:layout_alignEnd="@+id/btnCambioTercerActivity"
        android:layout_alignLeft="@+id/btnCambioTercerActivity"
        android:layout_alignStart="@+id/btnCambioTercerActivity"
        android:clickable="true"
        android:onClick="onClickCuartoActivity" />

</RelativeLayout>
